<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.MainScreenActivity"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/Progress_relative_layout"
    android:background="@drawable/lightpista">

    <LinearLayout
        android:id="@+id/primary_linear"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/white_crop_round"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/settings"
                    android:layout_width="30dp"
                    android:paddingTop="10dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_settings"></ImageView>

                <ImageView
                    android:id="@+id/moregreatapps"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:paddingTop="10dp"
                    android:layout_gravity="left"
                    android:src="@drawable/ic_more_apps"></ImageView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="85dp"
                    android:layout_marginStart="35dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/text_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="left"
                        android:paddingTop="20dp"
                        android:textColor="@color/purple_700"
                        android:text="كونى ام افضل فى 30 يوم"
                        android:textSize="35sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

<androidx.cardview.widget.CardView
    android:layout_width="350dp"
    app:cardCornerRadius="20dp"
    android:layout_marginTop="166dp"
    android:layout_marginLeft="30dp"
    android:layout_height="450dp">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="17dp"
        android:orientation="vertical">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabTextColor="@color/purple_500"
            style="@style/CusTomTabtext"
            app:tabSelectedTextColor="@color/purple_700"
            android:layout_marginTop="35dp" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:gravity="bottom"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:padding="20dp"
    android:background="@drawable/buttom_round_rect"
    android:orientation="horizontal"
    android:layout_alignParentBottom="true">
<ImageView
    android:layout_width="0dp"
    android:layout_weight="1"
    android:id="@+id/whatsapp_share"
    android:src="@drawable/whatsappicon"
    android:layout_height="40dp"></ImageView>
    <ImageView
        android:layout_width="0dp"
        android:id="@+id/sendemail_share"
        android:layout_weight="1"
           android:src="@drawable/messagered"
        android:layout_height="40dp"></ImageView>
    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/facebook_share"
       android:src="@drawable/facebook"
        android:layout_height="40dp"></ImageView>
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/buymecoffe_share"
            android:src="@drawable/coffedeveloper"
            android:layout_height="40dp"></ImageView>

</LinearLayout>
</RelativeLayout>