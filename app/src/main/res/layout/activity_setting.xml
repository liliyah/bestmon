<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/light_blue_bg"
    android:layout_height="match_parent"
    tools:context="my.mummyapp.bestmom.ui.SettingActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Switch
        android:layout_width="70dp"
        android:id="@+id/switch_setting"
        android:layout_height="70dp"/>
    <TextView
        android:layout_width="wrap_content"
         android:text="ارسال اشعارات بصفه يوميه "
        android:textSize="20sp"
        android:textColor="@color/purple_700"
           android:layout_marginLeft="75dp"
        android:layout_height="wrap_content"/>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_timeSelected"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="180dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/purple_700"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:text="الوقت الذى تم اختيارة "
            android:textColor="@color/purple_700"
            android:layout_marginTop="20dp"
            android:textSize="20sp"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <com.airbnb.lottie.LottieAnimationView
        android:layout_marginTop="50dp"
        android:id="@+id/lottie_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:lottie_autoPlay="true"
        app:lottie_fileName="74601-mother-and-baby.json"
        app:lottie_loop="true" />
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_marginTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
    </com.google.android.gms.ads.AdView>

</LinearLayout>